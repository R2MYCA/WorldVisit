<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseCountryActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_country"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/liste_box">
        <EditText
            android:id="@+id/search_country_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/search_btn_placeholder"
            style="@style/input_gray"
            app:layout_constraintRight_toLeftOf="@+id/btn_search_country"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/btn_search_country"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/btn_pink"
            android:text="@string/search_btn"
            app:layout_constraintLeft_toRightOf="@+id/search_country_input"
            app:layout_constraintRight_toRightOf="parent"
            android:onClick="getWithPartialName"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/search_country"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="1dp"
        style="@style/background_white"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/liste_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/search_country"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/background_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>